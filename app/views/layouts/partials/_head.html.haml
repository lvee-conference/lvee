%head
  %title= page_title
  %meta(charset="utf-8")

  %meta{property: "og:title", content: "#{SITE_FULL_TITLE}"}
  %meta{property: "og:type", content: "website"}
  %meta{property: "og:url", content: "#{SITE_URL}"}
  %meta{property: "og:image", content: "#{SITE_URL}images/og.png"}
  %meta{property: "og:image:secure_url", content: "#{SITE_URL}images/og.png"}
  %meta{property: "og:image:type", content: "image/png"}
  %meta{property: "og:image:height", content: "600"}
  %meta{property: "og:image:width", content: "600"}
  %meta{property: "og:site_name", content: "#{SITE_TITLE}"}
  %meta{property: "og:description", content: @metainfo.description}
  %meta{property: "og:ttl", content: "345600"}

  %meta{itemprop: "name", content: "#{SITE_FULL_TITLE}"}
  %meta{itemprop: "description", content: @metainfo.description}
  %meta{itemprop: "image", content: "#{SITE_URL}images/og.png"}
  %meta{itemprop: "author", content: "https://plus.google.com/109479776430354800569"}
  %meta{itemprop: "publisher", content: "https://plus.google.com/109479776430354800569"}

  %meta{name: "keywords", content: @metainfo.keywords}
  %meta{name: "description", content: @metainfo.description}
  %meta{name: "author", content: "#{SITE_TITLE}"}

  %meta{name: "theme-color", content: "#{MOBILE_COLOR}"}
  %meta{name: "msapplication-TileColor", content: "#{MOBILE_COLOR}"}
  %meta{name: "msapplication-TileImage", content: "/mstile-144x144.png"}
  %meta{name: "theme-color", content: "#ffffff"}
  %meta{name: "apple-mobile-web-app-title", content: "#{SITE_TITLE}"}
  %meta{name: "application-name", content: "#{SITE_TITLE}"}
  %link{rel: "image_src", href: "#{SITE_URL}images/og.png"}
  %link{rel: "apple-touch-icon", sizes: "180x180", href: "/apple-touch-icon.png"}
  %link{rel: "icon", type: "image/png", sizes: "32x32", href: "/favicon-32x32.png"}
  %link{rel: "icon", type: "image/png", sizes: "194x194", href: "/favicon-194x194.png"}
  %link{rel: "icon", type: "image/png", sizes: "192x192", href: "/android-chrome-192x192.png"}
  %link{rel: "icon", type: "image/png", sizes: "16x16", href: "/favicon-16x16.png"}
  %link{rel: "manifest", href: "/site.webmanifest"}
  %link{rel: "mask-icon", href: "/safari-pinned-tab.svg", color: "#{MOBILE_COLOR}"}

  = stylesheet_link_tag "application", :debug => Rails.env.development?
  = stylesheet_link_tag "print", :media => "print"
  - if @site.try(:stylesheet)
    = stylesheet_link_tag(@site.file_url('style'), media: :all)

  - if @canonical_url
    %link(rel="canonical" href=@canonical_url)
    %meta{property: "og:url", content: @canonical_url}
  = auto_discovery_link_tag(:rss, rss_news_item_index_path)
  = csrf_meta_tag

