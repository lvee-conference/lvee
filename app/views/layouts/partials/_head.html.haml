%head
  %title= page_title
  %meta(charset="utf-8")
  %meta{name: "keywords", content: @metainfo.keywords}
  %meta{name: "description", content: @metainfo.description}
  %meta{name: "author", content: "#{SITE_TITLE}"}
  %meta{name: "theme-color", content: "#{CHROME_TAB_COLOR}"}
  %meta{property: "og:title", content: "#{SITE_FULL_TITLE}"}
  %meta{property: "og:site_name", content: "#{SITE_TITLE}"}
  %meta{property: "og:description", content: @metainfo.description}
  %meta{property: "og:image", content: "#{SITE_URL}images/cones200.png"}
  %link{rel:"image_src", href: "#{SITE_URL}images/cones500.png"}

  = stylesheet_link_tag "application", :debug => Rails.env.development?
  = stylesheet_link_tag "print", :media => "print"
  - if @site.try(:stylesheet)
    = stylesheet_link_tag(@site.file_url('style'), media: :all)

  - if @canonical_url
    %link(rel="canonical" href=@canonical_url)
    %meta{property: "og:url", content: @canonical_url}
  = auto_discovery_link_tag(:rss, rss_news_item_index_path)
  = csrf_meta_tag

  <!--[if lte IE 6]>
  <script type="text/javascript" src="/djs/ie_fuck.js"></script>
  <![endif]-->
